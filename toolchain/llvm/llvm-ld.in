#!/bin/bash
PROG=@CMAKE_INSTALL_PREFIX@/bin/ld.lld
TARGET=@TARGET_ARCH@
POLICY="cache_size_bytes=1g:prune_interval=1m"
FLAGS="-m @ld_m_flag@"
FLAGS="$FLAGS --thinlto-cache-dir=@MINGW_INSTALL_PREFIX@/thinlto -Xlink=-lldltocachepolicy:$POLICY"
FLAGS="$FLAGS --no-insert-timestamp --major-os-version=10 --major-subsystem-version=6 --minor-subsystem-version=2 --file-alignment=4096"
FLAGS="$FLAGS -O3 -Xlink=-opt:lldlto=3 -Xlink=-opt:lldltocgo=3 -s"

if [ "$CONF" == "1" ]; then
    SKIP_OPT="-O0 -Xlink=-opt:lldlto=0 -Xlink=-opt:lldltocgo=0 --no-gc-sections --no-guard-cf"
else
    FLAGS="$FLAGS -Xlink=-release @lld_cfi@"
    if [ "$GC" != "0" ]; then
        LLD_GC="--gc-sections -Xlink=-opt:safeicf"
    fi
    if [ "$PDB" == "1" ]; then
        FLAGS="$FLAGS --pdb="
    fi
fi

"$PROG" "$@" $FLAGS $LLD_GC @LLD_FLAGS@ $SKIP_OPT
